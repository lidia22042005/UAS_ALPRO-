class Product:
    def __init__(self, product_id, name, quantity, price):
        self.product_id = product_id
        self.name = name
        self.quantity = quantity
        self.price = price

    def __str__(self):
        return f"ID: {self.product_id}, Name: {self.name}, Quantity: {self.quantity}, Price: {self.price}"


class WarehouseManagementSystem:
    def __init__(self):
        self.products = []

    def add_product(self):
        product_id = input("Enter Product ID: ")
        name = input("Enter Product Name: ")
        quantity = int(input("Enter Product Quantity: "))
        price = float(input("Enter Product Price: "))
        product = Product(product_id, name, quantity, price)
        self.products.append(product)
        print("Product added successfully!\n")

    def display_products(self):
        if not self.products:
            print("No products available.\n")
        else:
            print("\nList of Products:")
            for product in self.products:
                print(product)
            print()

    def delete_product(self):
        product_id = input("Enter the Product ID to delete: ")
        for product in self.products:
            if product.product_id == product_id:
                self.products.remove(product)
                print("Product deleted successfully!\n")
                return
        print("Product not found.\n")

    def update_product(self):
        product_id = input("Enter the Product ID to update: ")
        for product in self.products:
            if product.product_id == product_id:
                print("What would you like to update?")
                print("1. Name")
                print("2. Quantity")
                print("3. Price")
                choice = int(input("Enter your choice: "))
                if choice == 1:
                    product.name = input("Enter new name: ")
                elif choice == 2:
                    product.quantity = int(input("Enter new quantity: "))
                elif choice == 3:
                    product.price = float(input("Enter new price: "))
                else:
                    print("Invalid choice.\n")
                    return
                print("Product updated successfully!\n")
                return
        print("Product not found.\n")


def main():
    system = WarehouseManagementSystem()
    while True:
        print("Warehouse Management System")
        print("1. Add Product")
        print("2. Display Products")
        print("3. Delete Product")
        print("4. Update Product")
        print("5. Exit")
        choice = int(input("Enter your choice: "))

        if choice == 1:
            system.add_product()
        elif choice == 2:
            system.display_products()
        elif choice == 3:
            system.delete_product()
        elif choice == 4:
            system.update_product()
        elif choice == 5:
            print("Exiting the system. Goodbye!")
            break
        else:
            print("Invalid choice. Please try again.\n")


if __name__ == "__main__":
    main()
    
   
